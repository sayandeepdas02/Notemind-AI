generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  email             String   @unique
  password          String?
  name              String?
  googleRefreshToken String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  meetings          Meeting[]
}

model Meeting {
  id                String   @id @default(uuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  
  googleEventId     String?  @unique
  joinUrl           String
  
  title             String
  startTime         DateTime
  endTime           DateTime?
  
  status            String   @default("SCHEDULED")
  
  recording         Recording?
  transcript        String?  // Stored as text directly
  summary           String?  // Stored as text directly
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Recording {
  id          String   @id @default(uuid())
  meetingId   String   @unique
  meeting     Meeting  @relation(fields: [meetingId], references: [id])
  
  s3Key       String
  durationSec Int?
  
  createdAt   DateTime @default(now())
}
